input-border-style(t,r,b,l)
	border-top-style t
	border-right-style r
	border-bottom-style b 
	border-left-style l


$input-elems = @block {
	min-height $text-input-min-height
	font-size $input-text-size
	font-weight $input-text-weight
	background-color $col-input-bckg
	border-width 1px
	border-color $col-input-border
	border-radius $input-border-radius
	padding-top 15px
	padding-left $input-left-padding
	padding-right "calc(%s + %s + 10px)" % ($input-left-padding $input-text-size)
	color $col-input-font-active
}

.text-input
	position relative
	input
		{$input-elems}
		input-border-style($input-b-s-t, $input-b-s-r, $input-b-s-b, $input-b-s-l)
		&:focus ~ .text-input__placeholder
		&:focus.-invalid ~ .text-input__placeholder
			top 8px
			left $input-left-padding
			font-size $input-placehld-active-font-size
			// line-height 1
		&.-filled ~ .text-input__placeholder
			top 8px
			left $input-left-padding
			font-size $input-placehld-active-font-size
			// line-height 1
		&.-invalid ~ .text-input__placeholder
			border-color $col-input-border-invalid
			color $col-input-font-invalid
		&:focus
			border-color $col-input-border-valid
			box-shadow 0px 0px 0px 1px $col-outline !important
		&.-invalid
			border-color $col-input-border-invalid
			&:focus
				box-shadow 0px 0px 0px 1px $col-input-border-invalid !important
		&:disabled
			border-color $col-input-border-disabled
			color $col-input-font-disabled
			box-shadow none !important
		&:disabled ~ .text-input__placeholder
			color $col-input-font-plchld-disabled
		&::-webkit-outer-spin-button
		&::-webkit-inner-spin-button
			-webkit-appearance none
			margin 0
	input[type=number]
		-moz-appearance textfield
	&.-no-radius-left
		input
			border-top-left-radius 0
			border-bottom-left-radius 0
	&.-no-radius-right
		input
			border-top-right-radius 0
			border-bottom-right-radius 0
	.text-input__placeholder
		position absolute
		top "calc(50% - (%s/2))" % $input-text-size
		left $input-left-padding
		font-size $input-text-size
		font-weight $input-text-weight
		color $col-input-font-plchld
		pointer-events none
		line-height 1
		transition top 0.1s linear, font-size 0.1s linear